inet {{ wan_ipv4 | ipaddr('address') }} 255.255.255.255 NONE mtu 1500 \
  pppoedev {{ pppoe_pppoedev }} authproto {{ pppoe_authproto }} \
  authkey '{{ pppoe_authkey }}' authname '{{ pppoe_authname }}' \
  up
dest {{ wan_ipv4_dest }}

{% for isp_netblock in isp_netblocks | ipv4 %}
!/sbin/route add -inet {{ isp_netblock }} -ifp \$if {{ wan_ipv4_dest }}
{% endfor %}
!/sbin/route add -inet default -ifp \$if {{ wan_ipv4_dest }}
{% if wan_ipv6 is defined %}

inet6 {{ wan_ipv6 | ipaddr('address') }} {{ wan_ipv6 | ipaddr('prefix') }}

{% for isp_netblock in isp_netblocks | ipv6 %}
!/sbin/route add -inet6 {{ isp_netblock }} -ifp \$if {{ wan_ipv6 | ipaddr('address') }}
{% endfor %}
!/sbin/route add -inet6 default -ifp \$if {{ wan_ipv6 | ipaddr('address') }}
{% endif %}
