inet {{ wan_ipv4 | ipaddr('address') }} 255.255.255.255 NONE mtu 1492 \
  pppoedev {{ pppoe_pppoedev }} authproto {{ pppoe_authproto }} \
  authkey '{{ pppoe_authkey }}' authname '{{ pppoe_authname }}' \
  up
dest {{ wan_ipv4_dest }}

{% for isp_netblock in isp_netblocks | ipv4 | sort %}
!/sbin/route add -inet {{ isp_netblock }} {{ wan_ipv4_dest }}
{% endfor %}
!/sbin/route add -inet default -ifp \$if {{ wan_ipv4 | ipaddr('address') }}
