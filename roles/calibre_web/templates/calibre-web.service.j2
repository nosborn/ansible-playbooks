[Unit]
After=network.target {{ media_disk_unit_name }}
Description=Calibre-Web Daemon
Requires={{ media_disk_unit_name }}
Wants=calibre.service

[Service]
ExecStart=/opt/calibre-web/venv/bin/cps -i 127.0.0.1 -l
Group=calibre-web
KillMode=process
LockPersonality=yes
NoNewPrivileges=yes
PrivateDevices=yes
PrivateTmp=yes
ProtectClock=yes
ProtectControlGroups=yes
ProtectHome=tmpfs
ProtectHostname=yes
ProtectKernelLogs=yes
ProtectKernelModules=yes
ProtectKernelTunables=yes
ProtectSystem=strict
ReadWritePaths={{ media_path }}
RemoveIPC=yes
Restart=on-failure
RestrictRealtime=yes
StateDirectory=calibre-web
StateDirectoryMode=0750
SupplementaryGroups={{ media_group }}
TimeoutStopSec=20
Type=simple
UMask=002
User=calibre-web
WorkingDirectory={{ calibre_web_home }}

[Install]
WantedBy=multi-user.target

