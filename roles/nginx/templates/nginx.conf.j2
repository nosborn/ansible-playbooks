worker_processes {{ ansible_processor_count }};

#error_log logs/error.log;
#error_log logs/error.log notice;
#error_log logs/error.log info;

events {
  worker_connections 1024;
}

http {
  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  sendfile on;
  tcp_nopush on;

  gzip on;
  gzip_types application/x-javascript application/xml \
    text/css text/javascript text/plain text/xml;

  server_tokens off;

  resolver 127.0.0.1 valid=300s;
  resolver_timeout 5s;

  server {
    listen 127.0.0.1:80 default_server;
    listen [::1]:80 default_server;
    server_name {{ ansible_fqdn }};

    gzip off;

    location /status {
      access_log off;
      stub_status;
    }
  }

  server {
    listen {{ wan_ipv4 | ipaddr('address') }}:80 default_server;
{% if wan_ipv6 is defined %}
  # listen [{{ wan_ipv6 | ipaddr('address') }}]:80 default_server;
{% endif %}
    server_name _;

    gzip off;

    add_header Content-Security-Policy "default-src 'self'" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;

    location /.well-known/acme-challenge/ {
      alias /acme/;
      allow all;
    }

    location / {
      return 301 https://$host$request_uri;
    }
  }

  server {
    listen {{ wan_ipv4 | ipaddr('address') }}:443 default_server ssl http2;
{% if wan_ipv6 is defined %}
  # listen [{{ wan_ipv6 | ipaddr('address') }}]:443 default_server ssl http2;
{% endif %}
    server_name _;

    gzip off;

    add_header Content-Security-Policy "default-src 'self'" always;
    add_header Strict-Transport-Security "max-age=15768000; includeSubdomains;" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;

    ssl_certificate /etc/ssl/acme/fullchain.pem;
    ssl_certificate_key /etc/ssl/acme/private/privkey.pem;
    ssl_ciphers ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256;
    ssl_dhparam /etc/ssl/dhparam.pem;
    ssl_prefer_server_ciphers on;
    ssl_protocols TLSv1.2;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    ssl_session_timeout 1d;
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/ssl/acme/chain.pem;
  }

  server {
    listen 172.16.82.1:80 default_server;
    server_name _;

    gzip off;

  # add_header Content-Security-Policy "default-src 'self'" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;

    root /var/www/symon;
  }
}
