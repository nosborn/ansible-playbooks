user http;
worker_processes {{ nginx_worker_processes }};

#error_log /var/log/nginx/error.log;
#error_log /var/log/nginx/error.log notice;
#error_log /var/log/nginx/error.log info;

events {
  worker_connections 1024;
}

http {
  include /etc/nginx/mime.types;
  types {
    application/json geojson;
    application/x-apple-aspen-config mobileconfig;
  }
  default_type application/octet-stream;

  sendfile on;
  #tcp_nopush on;

  gzip on;
  gzip_types application/javascript application/json text/css text/plain text/xml;
  gzip_vary on;

  server_tokens off;

  resolver [::1] valid=300s;
  resolver_timeout 10s;

  log_format vcombined '$host: $remote_addr - $remote_user [$time_local] '
                       '"$request" $status $body_bytes_sent "$http_referer" '
                       '"$http_user_agent"';
  access_log /var/log/nginx/access.log vcombined;

  server {
    listen 127.0.0.1:80 default_server;
    listen [::1]:80 default_server;
    server_name {{ ansible_fqdn }};

    gzip off;

    location /status {
      access_log off;
      stub_status;
    }
  }

  server {
    # listen {{ wan_ipv4|ipaddr('address') }}:80 default_server;
    # listen {{ wan_ipv6|ipaddr('address')|ipwrap }}:80 default_server;
    listen 80 default_server;
    server_name _;

    gzip off;

    add_header Content-Security-Policy "default-src 'self'" always;
    add_header Referrer-Policy strict-origin-when-cross-origin always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-XSS-Protection '1; mode=block' always;

    location ^~ /.well-known/acme-challenge/ {
      default_type "text/plain";
      root {{ certbot_webroot_path }};
    }

    location / {
      return 404;
    }
  }

  include /etc/nginx/conf.d/*.conf;
}
