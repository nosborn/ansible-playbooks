	local-zone: "{{ zone }}." nodefault
{% endfor %}

	# unblock-lan-zones: no
	# insecure-lan-zones: no

	local-zone: "use-application-dns.net." static

	local-data: "unifi.{{ global_domain }}. A {{ hostvars['unifi']['lan_ipv4_address'] }}"

	local-data: "c.news.apple. 86400 A 0.0.0.0"
	local-data: "c.news.apple. 86400 AAAA ::"

	local-data: "diagnostics.meethue.com. 86400 A 0.0.0.0"
	local-data: "diagnostics.meethue.com. 86400 AAAA ::"

	local-data: "trace.svc.ui.com. 86400 A 0.0.0.0"
	local-data: "trace.svc.ui.com. 86400 AAAA ::"

	tls-cert-bundle: "/etc/ssl/cert.pem"

remote-control:
	control-enable: no

{% for zone in unbound_nodefault_local_zones %}
forward-zone:
	name: "{{ zone }}."
	forward-addr: "{{ hostvars['usg']['lan_ipv4_address'] }}"
	forward-no-cache: yes

