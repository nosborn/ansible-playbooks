server:
	verbosity: {{ unbound_config_verbosity }}

	num-threads: {{ unbound_config_num_threads }}

{% for interface in unbound_config_interface %}
	interface: {{ interface }}
{% endfor %}

	msg-cache-size: 4m  # default
	msg-cache-slabs: {{ unbound_config_num_threads }}

	rrset-cache-size: 8m
	rrset-cache-slabs: {{ unbound_config_num_threads }}

	infra-cache-slabs: {{ unbound_config_num_threads }}

#	prefer-ip6: yes

{% if unbound_config_access_control is defined %}
{%   for access_control in unbound_config_access_control %}
	access-control: {{ access_control }}
{%   endfor %}

{% endif %}
	pidfile: {{ unbound_pid_file }}

#	root-hints: /var/unbound/etc/named.cache

	hide-identity: yes
	hide-version: yes

	harden-below-nxdomain: yes

	qname-minimisation: yes

	private-address: 10.0.0.0/8
	private-address: 169.254.0.0/16
	private-address: 172.16.0.0/12
	private-address: 192.168.0.0/16
	private-address: ::ffff:0:0/96
	private-address: fd00::/8
	private-address: fe80::/10

	prefetch: yes
	prefetch-key: yes

#	auto-trust-anchor-file: /var/unbound/db/root.key

#	key-cache-size: 32m
	key-cache-slabs: {{ unbound_config_num_threads }}

{% if ansible_hostname == 'tombstone' %}
#	include: /var/unbound/etc/filter-domains.conf
#	include: /var/unbound/etc/filter-hosts.conf

{% endif %}
# remote-control:
#	control-enable: yes
#	control-interface: /var/run/unbound.control
{% if unbound_config_default_forward_addr is defined %}

forward-zone:
        name: "."
{%   for forward_addr in unbound_config_default_forward_addr %}
	forward-addr: {{ forward_addr }}
{%   endfor %}
	forward-first: yes
{%   if unbound_config_default_forward_tls_upstream is defined %}
	forward-tls-upstream: {{ unbound_config_default_forward_tls_upstream }}
{%   endif %}
{% endif %}
