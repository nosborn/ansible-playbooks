listen on 127.0.0.1
listen on ::1
query from {{ lan_ipv4_address }}
{% for server in ntpd_server | default([]) | sort %}
server {{ server }}
{% endfor %}
{% for servers in ntpd_servers | default([]) | sort %}
servers {{ servers }}
{% endfor %}
{% for constraint in ntpd_constraint | default([]) | sort %}
constraint from "{{ constraint }}"
{% endfor %}
{% for constraints in ntpd_constraints | default([]) | sort %}
constraints from "{{ constraints }}"
{% endfor %}
