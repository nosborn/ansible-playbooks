{
  "service": {
    "nat": {
      "rule": {
        "1": {
          "description": "Captive DNS",
          "destination": {
            "address": "!{{ hostvars['usg']['lan_ipv4_address'] }}",
            "port": "53"
          },
          "inbound-interface": "{{ hostvars['usg']['lan_if'] }}",
          "inside-address": {
            "address": "{{ hostvars['diskstation']['lan_ipv4_address'] }}",
            "port": "53"
          },
          "log": "enable",
          "protocol": "tcp_udp",
          "source": {
            "address": "!{{ hostvars['diskstation']['lan_ipv4_address'] }}"
          },
          "type": "destination"
        },
        "5001": {
          "description": "Masquerade for Captive DNS",
          "destination": {
            "address": "{{ hostvars['diskstation']['lan_ipv4_address'] }}",
            "port": "53"
          },
          "log": "disable",
          "outbound-interface": "{{ hostvars['usg']['lan_if'] }}",
          "protocol": "tcp_udp",
          "type": "masquerade"
        }
      }
    }
  }
}
