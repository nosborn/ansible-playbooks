{
  "protocols": {
    "igmp-proxy": {
      "interface": {
        "{{ hostvars['usg']['lan_if'] }}": {
          "role": "upstream",
          "threshold": "1",
          "alt-subnet": "0.0.0.0/0"
        },
        "{{ hostvars['usg']['iot_if'] }}": {
          "role": "downstream",
          "threshold": "1",
          "alt-subnet": "0.0.0.0/0"
        }
      }
    }
  },
  "service": {
    "dns": {
      "forwarding": {
        "cache-size": "10000",
        "except-interface": [
          "{{ hostvars['usg']['wan_if'] }}"
        ],
        "options": [
          "server=1.1.1.1",
          "server=1.0.0.1"
        ]
      }
    },
    "gui": {
      "older-ciphers": "disable"
    },
    "mdns": {
      "repeater": {
        "interface": [
          "{{ hostvars['usg']['lan_if'] }}",
          "{{ hostvars['usg']['iot_if'] }}"
        ]
      }
    }
  },
  "system": {
    "static-host-mapping": {
      "host-name": {
        "ping.ui.com": {
          "inet": [
            "0.0.0.0"
          ]
        },
        "ping.ubnt.com": {
          "inet": [
            "0.0.0.0"
          ]
        },
        "trace.svc.ubnt.com": {
          "inet": [
            "0.0.0.0"
          ]
        },
        "warranty.svc.ubnt.com": {
          "inet": [
            "0.0.0.0"
          ]
        }
      }
    }
  }
}
