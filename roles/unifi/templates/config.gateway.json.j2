{
  "interfaces": {
    "tunnel": {
      "tun0": {
        "address": [
          "{{ hostvars.gateway.ipv6_tunnel_address }}"
        ],
        "description": "{{ hostvars.gateway.ipv6_tunnel_description }}",
        "encapsulation": "sit",
        "local-ip": "{{ hostvars.gateway.wan_ipv4_address }}",
        "multicast": "disable",
        "remote-ip": "{{ hostvars.gateway.ipv6_tunnel_remote_ip }}"
      }
    }
  },
  "protocols": {
    "igmp-proxy": {
      "interface": {
        "{{ hostvars.gateway.lan_if }}": {
          "role": "upstream",
          "threshold": "1",
          "alt-subnet": "0.0.0.0/0"
        },
        "{{ hostvars.gateway.iot_if }}": {
          "role": "downstream",
          "threshold": "1",
          "alt-subnet": "0.0.0.0/0"
        }
      }
    },
    "static": {
      "interface-route6": {
        "::/0": {
          "next-hop-interface": {
            "{{ hostvars.gateway.ipv6_tunnel_if }}": "''"
          }
        }
      }
    }
  },
  "service": {
    "dns": {
      "forwarding": {
        "cache-size": "10000",
        "except-interface": [
          "{{ hostvars.gateway.wan_if }}"
        ],
        "name-server": [
          "1.1.1.1",
          "1.0.0.1"
        ],
        "options": [
          "all-servers",
          "cname=unifi.{{ domain_name }},unifi",
          "domain-needed",
          "host-record=unifi,{{ lan_ipv4_address }}",
          "no-negcache",
          "server=/{{ domain_name }}/{{ hostvars.tombstone.lan_ipv4_address }}"
        ]
      }
    },
    "gui": {
      "older-ciphers": "disable"
    },
    "mdns": {
      "repeater": {
        "interface": [
          "{{ hostvars.gateway.lan_if }}",
          "{{ hostvars.gateway.iot_if }}"
        ]
      }
    }
  },
  "system": {
    "conntrack": {
      "modules": {
        "ftp": "disable",
        "gre": "disable",
        "h323": "disable",
        "pptp": "disable",
        "sip": "disable"
      }
    },
    "domain-name": "{{ domain_name }}",
    "static-host-mapping": {
      "host-name": {
        "trace.svc.ubnt.com": {
          "inet": [
            "0.0.0.0"
          ]
        },
        "warranty.svc.ubnt.com": {
          "inet": [
            "0.0.0.0"
          ]
        }
      }
    },
    "time-zone": "{{ timezone }}"
  }
}
