[Interface]
Address = {{ wireguard_ipv4_address }}/24
ListenPort = 51820
PostDown = iptables -D FORWARD -i %i -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ lan_if }} -j MASQUERADE
PostUp = iptables -A FORWARD -i %i -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ lan_if }} -j MASQUERADE
PrivateKey = {{ wireguard_private_key }}
{% for peer in wireguard_peers %}

[Peer]
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.ipv4_address }}
{% endfor %}
