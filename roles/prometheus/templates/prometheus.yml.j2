---
alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - localhost:9093

scrape_configs:
  - job_name: grafana
    static_configs:
      - targets:
          - localhost:3000

  - job_name: loki
    static_configs:
      - targets:
          - localhost:3100

  - job_name: prometheus
    scrape_interval: 5s
    scrape_timeout: 5s
    static_configs:
      - targets:
          - localhost:9090
