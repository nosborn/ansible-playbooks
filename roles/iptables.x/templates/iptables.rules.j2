*raw
:PREROUTING ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A PREROUTING -m rpfilter --invert -m limit --limit 5/m --limit-burst 10 -j LOG
-A PREROUTING -m rpfilter --invert -j DROP
COMMIT

*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
:TCP - [0:0]
:UDP - [0:0]
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m conntrack --ctstate INVALID -m limit --limit 5/m --limit-burst 10 -j LOG
-A INPUT -m conntrack --ctstate INVALID -j DROP

-A INPUT -s {{ lan_ipv4_subnet }} -d {{ lan_ipv4_address }}/32 -j ACCEPT
-A INPUT -s {{ lan_ipv4_subnet }} -d {{ lan_ipv4_subnet | ansible.netcommon.ipaddr('broadcast') }}/32 -j ACCEPT
-A INPUT -s {{ lan_ipv4_subnet }} -d 224.0.0.0/24 -j ACCEPT
-A INPUT -s {{ lan_ipv4_subnet }} -d 255.255.255.255/32 -j ACCEPT

-A INPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT
-A INPUT -p tcp -m tcp --tcp-flags FIN,SYN,RST,ACK SYN -m conntrack --ctstate NEW -j TCP
-A INPUT -p tcp -m limit --limit 5/m --limit-burst 10 -j LOG
-A INPUT -p tcp -j REJECT --reject-with tcp-reset
-A INPUT -p udp -m conntrack --ctstate NEW -j UDP
-A INPUT -p udp -m limit --limit 5/m --limit-burst 10 -j LOG
-A INPUT -p udp -j REJECT --reject-with icmp-port-unreachable
-A INPUT -m limit --limit 5/m --limit-burst 10 -j LOG
-A INPUT -j REJECT --reject-with icmp-proto-unreachable
-A TCP -s {{ lan_ipv4_subnet }} -p tcp -m tcp --dport 22 -j ACCEPT
-A TCP -p tcp -m tcp --dport 53 -j ACCEPT
-A TCP -p tcp -m tcp --dport 80 -j ACCEPT
-A TCP -p tcp -m tcp --dport 443 -j ACCEPT
-A TCP -s {{ lan_ipv4_subnet }} -p tcp -m tcp --dport 4141 -j ACCEPT
{% for source in github_hooks | ansible.netcommon.ipv4 %}
-A TCP -s {{ source }} -p tcp -m tcp --dport 4141 -j ACCEPT
{% endfor %}
-A UDP -p udp -m udp --dport 53 -j ACCEPT
-A UDP -s {{ lan_ipv4_subnet }} -p udp -m udp --dport 51820 -j ACCEPT
COMMIT
