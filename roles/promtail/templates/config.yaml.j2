---
clients:
  - # external_labels:
    #   host: "{{ ansible_hostname }}"
    url: "{{ loki_push_url }}"

scrape_configs:
  - job_name: system
    static_configs:
      - labels:
          __path__: /var/log/*.log
          job: varlogs
        targets:
          - localhost
      - labels:
          __path__: /var/log/*/*.log
          job: varlogs
        targets:
          - localhost
      - labels:
          __path__: /var/log/messages
          job: varlogs
        targets:
          - localhost

server:
  grpc_listen_port: 0
  http_listen_port: 9080
