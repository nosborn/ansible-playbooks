{% if inventory_hostname in groups.influxdb %}
Cmnd_Alias PFCTL = /sbin/smtpctl -s info
Defaults!PFCTL !logfile, !pam_session, !syslog
_telegraf,root ALL=(ALL) NOPASSWD: PFCTL

Cmnd_Alias SMTPCTL = /usr/sbin/smtpctl
Defaults!SMTPCTL !logfile, !pam_session, !syslog
_telegraf,root ALL=(ALL) NOPASSWD: SMTPCTL

Cmnd_Alias UNBOUNDCTL = /usr/sbin/unbound-control
Defaults!UNBOUNDCTL !logfile, !pam_session, !syslog
_telegraf,root ALL=(ALL) NOPASSWD: UNBOUNDCTL

{% endif %}
