---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/name: calibre
  name: calibre
  namespace: media
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: calibre
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: calibre
    spec:
      containers:
        - args:
            - --disable-use-bonjour
            - --enable-auth
            - --enable-local-write
            - --listen-on=0.0.0.0
            - --log=/dev/stderr
            - --port=8080
            - /data/media/books
          env:
            - name: CALIBRE_CACHE_DIRECTORY
              value: /config/.cache # FIXME
            - name: CALIBRE_CONFIG_DIRECTORY
              value: /config
            - name: CALIBRE_TEMP_DIR
              value: /config/tmp # FIXME
            - name: TZ
              value: "{{ timezone }}"
          image: ghcr.io/nosborn/calibre:latest
          imagePullPolicy: Always
          # livenessProbe:
          #   httpGet:
          #     path: /ping
          #     port: http
          name: calibre
          ports:
            - containerPort: 8080
              name: http
          # readinessProbe:
          #   httpGet:
          #     path: /ping
          #     port: http
          resources:
            limits:
              memory: 256Mi # TODO
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - ALL
            readOnlyRootFilesystem: true
            runAsGroup: !!int "{{ media_gid }}"
            runAsNonRoot: true
            runAsUser: !!int "{{ media_uid }}"
          volumeMounts:
            - mountPath: /config
              name: config
            - mountPath: /data
              name: media
              readOnly: false # TODO: remove
      securityContext:
        fsGroup: !!int "{{ media_gid }}"
        seccompProfile:
          type: RuntimeDefault
      volumes:
        - hostPath:
            path: /var/lib/calibre
            type: Directory
          name: config
        - hostPath:
            path: /media/media
            type: Directory
          name: media
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  labels:
    app.kubernetes.io/name: calibre
  name: calibre
  namespace: media
spec:
  entryPoints:
    - web
  routes:
    - kind: Rule
      match: Host(`calibre.{{ domain_name }}`)
      services:
        - kind: Service
          name: calibre
          port: 8080
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app.kubernetes.io/name: calibre
  name: calibre
  namespace: media
spec:
  ports:
    - port: 8080
      protocol: TCP
      targetPort: http
  selector:
    app.kubernetes.io/name: calibre
