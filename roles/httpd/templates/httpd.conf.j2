prefork {{ ansible_processor_count }}

server "{{ ansible_fqdn }}" {
  listen on 127.0.0.1 port 80
  listen on ::1 port 80

  location "/.well-known/acme-challenge/*" {
    root "/acme"
    root strip 2
  }
}

